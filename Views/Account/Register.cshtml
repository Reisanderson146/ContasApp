@model ContasApp.Presentation.Models.AccountRegisterViewModel
@{
    //definindo o layout da página
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="text-center">
    <h4>Criar Conta de Usuário</h4>
    <p>Informe os seus dados para criar uma conta de usuário e acessar o sistema.</p>
    <hr />
</div>

<div class="mb-2 text-center">
    <strong>@TempData["Mensagem"]</strong>
</div>

@using (Html.BeginForm())
{
  <div class="mb-2">
        <label>Informe seu nome completo:</label>
        @Html.TextBoxFor(model => model.Nome, new { @class="form-control", placeholder="Ex: Joao Silva"})
        <span class="text-danger">
            @Html.ValidationMessageFor(Model => Model.Nome)
        </span>
    </div>

    <div class="mb-2">
        <label>Informe seu email:</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Ex: joao@gmail.com" })
        <span class="text-danger">
            @Html.ValidationMessageFor(Model => Model.Email)
        </span>
    </div>

    <div class="mb-2">
        <label>Informe sua senha:</label>
        @Html.PasswordFor(model => model.Senha, new { @class = "form-control"})
        <span class="text-danger">
            @Html.ValidationMessageFor(Model => Model.Senha)
        </span>
    </div>

    <div class="mb-2">
        <label>Confirme sua senha:</label>
        @Html.PasswordFor(model => model.SenhaConfirm, new { @class = "form-control"})
        <span class="text-danger">
            @Html.ValidationMessageFor(Model => Model.SenhaConfirm)
        </span>
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" class="btn btn-primary" value="Realizar Cadastro" />
    </div>

    <div class="mb-2 text-center">
        Já possui conta?
        <a href="/Account/Login">Acesse aqui!</a>
    </div>
  
}


